---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Footer from '../../../components/Layout/Footer.astro';
import { formatName, formatBlockName, cleanSegment } from '../../../utils/navigation-generator.js';
import { getMetaName as getMetaNameFromStore } from '../../../utils/load-meta';
import CollapsibleSidebar from '../../../components/Navigation/CollapsibleSidebar.astro';
import MobileMenu from '../../../components/Navigation/MobileMenu.astro';
import StickyHeader from '../../../components/Layout/StickyHeader.astro';
import { 
  getLessonsByMateria, 
  filterLessonsByPath, 
  getUniqueCapitulos 
} from '../../../utils/content-helpers';
import { MATERIA_SLUGS, type MateriaSlug, type Lesson } from '../../../types/content';
import { materiaConfig, getMateriaName } from '../../../config/materias';

export async function getStaticPaths() {
  const paths: Array<{ params: { materia: string; capitulo: string }; props: { materia: MateriaSlug; capitulo: string; cleanCapitulo: string } }> = [];
  
  for (const materia of MATERIA_SLUGS) {
    const lessons = await getLessonsByMateria(materia);
    const capitulos = getUniqueCapitulos(lessons);
    
    for (const capitulo of capitulos) {
      // URL limpia sin prefijo num√©rico
      const cleanCapitulo = cleanSegment(capitulo);
      paths.push({
        params: { materia, capitulo: cleanCapitulo },
        props: { materia, capitulo, cleanCapitulo }
      });
    }
  }
  
  return paths;
}

interface Props {
  materia: MateriaSlug;
  capitulo: string;
  cleanCapitulo: string;
}

const { materia, capitulo, cleanCapitulo } = Astro.props;
const config = materiaConfig[materia] ?? materiaConfig.fisica;

// Obtener lecciones de este cap√≠tulo (tipado)
const allLessons = await getLessonsByMateria(materia);
const lessons = filterLessonsByPath(allLessons, `${capitulo}/`);

// Agrupar por tema
const temas: Record<string, Lesson[]> = {};
for (const lesson of lessons) {
  const parts = lesson.slug.split('/');
  const tema = parts[1];
  if (tema) {
    if (!temas[tema]) temas[tema] = [];
    temas[tema].push(lesson);
  }
}

// Ordenar lecciones dentro de cada tema
Object.values(temas).forEach(arr => {
  arr.sort((a, b) => a.slug.localeCompare(b.slug));
});

// Obtener nombres desde metadatos (usar claves limpias en min√∫sculas)
const materiaName = getMateriaName(materia);
const capituloKey = `${materia}/${cleanCapitulo.toLowerCase()}`;
const capituloName = getMetaNameFromStore(capituloKey, formatName(capitulo));

const getMetaName = (tema: string): string => {
  const cleanTema = cleanSegment(tema).toLowerCase();
  const key = `${materia}/${cleanCapitulo.toLowerCase()}/${cleanTema}`;
  return getMetaNameFromStore(key, formatBlockName(tema));
};

// Calcular √≠ndice del cap√≠tulo
const allCapitulos = getUniqueCapitulos(allLessons);
const capituloIndex = allCapitulos.indexOf(capitulo);

// Calcular totales
const totalTemas = Object.keys(temas).length;
const totalLecciones = Object.values(temas).reduce((acc, arr) => acc + arr.length, 0);
---

<BaseLayout title={`${capituloName} - ${materiaName}`} showTopBar={false}>
  <StickyHeader 
    showBreadcrumb={true}
    breadcrumbItems={[
      { label: 'Inicio', href: '/', icon: 'üè†' },
      { label: materiaName, href: `/${materia}`, icon: config.icon },
      { label: capituloName }
    ]}
  />
  <MobileMenu currentPath={Astro.url.pathname} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={Astro.url.pathname} />
    
    <main class="main-content">
      <!-- Header Premium -->
      <header class={`page-header page-header-${materia}`}>
        <div class="header-bg">
          <div class="header-orb header-orb-1"></div>
          <div class="header-orb header-orb-2"></div>
          <div class="header-grid"></div>
        </div>
        
        <div class="header-content">
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-number">{capituloIndex + 1}</span>
            </div>
            <div class="header-text">
              <span class="header-label">Cap√≠tulo {capituloIndex + 1}</span>
              <h1 class="header-title">{capituloName}</h1>
              <p class="header-desc">Explora los temas y lecciones de este cap√≠tulo</p>
            </div>
          </div>
          
          <div class="header-stats">
            <div class="stat-item">
              <span class="stat-number">{totalTemas}</span>
              <span class="stat-label">{totalTemas === 1 ? 'Tema' : 'Temas'}</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-number">{totalLecciones}</span>
              <span class="stat-label">{totalLecciones === 1 ? 'Lecci√≥n' : 'Lecciones'}</span>
            </div>
          </div>
          
          <!-- Breadcrumb integrado -->
          <div class="header-breadcrumb">
            <a href={`/${materia}`} class="crumb-link">
              <span class="crumb-icon">{config.icon}</span>
              <span>{materiaName}</span>
            </a>
            <span class="crumb-sep">‚Ä∫</span>
            <span class="crumb-current">{capituloName}</span>
          </div>
        </div>
      </header>

      <!-- Lista de Temas -->
      <section class="temas-section">
        <div class="temas-grid">
          {Object.entries(temas).map(([tema, lecciones], temaIndex) => {
            const leccionesCount = lecciones.length;
            
            return (
              <a 
                href={`/${materia}/${cleanCapitulo}/${cleanSegment(tema)}`}
                class="tema-card-link" 
                style={`--delay: ${temaIndex * 0.1}s; --accent: ${config.color}`}
              >
                <div class="tema-card-inner">
                  <div class="tema-indicator" style={`background: ${config.gradient}`}></div>
                  <div class="tema-info">
                    <span class="tema-label">Tema {temaIndex + 1}</span>
                    <h3 class="tema-name">{getMetaName(tema)}</h3>
                    <span class="tema-stats">{leccionesCount} {leccionesCount === 1 ? 'lecci√≥n' : 'lecciones'}</span>
                  </div>
                  <div class="tema-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    </main>
  </div>
  
  <Footer variant="minimal" />
</BaseLayout>

<style>
  @import '../../../styles/pages/capitulo.css';
</style>
