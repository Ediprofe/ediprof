---
import { formatName, formatBlockName } from '../../utils/navigation-generator.js';
import { allMeta } from '../../utils/load-meta.js';
import { getMateriaConfig } from '../../config/materias';

interface Props {
  materia: string;
  unidad: string;  // Capítulo en la nueva nomenclatura
  bloque: string;  // Tema en la nueva nomenclatura
}

const { materia, unidad, bloque } = Astro.props;
const config = getMateriaConfig(materia);

// Obtener nombres con tildes desde metadatos
const capituloKey = `${materia}/${unidad}`;
const temaKey = `${materia}/${unidad}/${bloque}`;
const capituloName = (allMeta as any)[capituloKey]?.name || formatName(unidad);
const temaName = (allMeta as any)[temaKey]?.name || formatBlockName(bloque);
---

<nav class="breadcrumb" aria-label="Navegación">
  <div class="breadcrumb-inner">
    <!-- Materia -->
    <div class="breadcrumb-item">
      <span class="breadcrumb-label">Materia</span>
      <a href={`/${materia}`} class="breadcrumb-materia" style={`--accent: ${config.color}`}>
        <span class="breadcrumb-materia-icon">{config.icon}</span>
        <span>{formatName(materia)}</span>
      </a>
    </div>
    
    <span class="breadcrumb-sep">›</span>
    
    <!-- Capítulo -->
    <div class="breadcrumb-item">
      <span class="breadcrumb-label">Capítulo</span>
      <a href={`/${materia}/${unidad}`} class="breadcrumb-link">
        {capituloName}
      </a>
    </div>
    
    <span class="breadcrumb-sep">›</span>
    
    <!-- Tema -->
    <div class="breadcrumb-item">
      <span class="breadcrumb-label">Tema</span>
      <a href={`/${materia}/${unidad}/${bloque}`} class="breadcrumb-link">
        {temaName}
      </a>
    </div>
  </div>
</nav>

<style>
  .breadcrumb {
    margin-bottom: 1.25rem;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-color, rgba(0,0,0,0.06));
  }

  :global(html.dark) .breadcrumb {
    background: rgba(255,255,255,0.03);
    border-color: rgba(255,255,255,0.08);
  }

  .breadcrumb-inner {
    display: flex;
    align-items: flex-end;
    gap: 0.625rem;
    flex-wrap: wrap;
  }

  .breadcrumb-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .breadcrumb-label {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted, #94a3b8);
  }

  .breadcrumb-materia {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem 0.25rem 0.25rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color, rgba(0,0,0,0.08));
    border-radius: 100px;
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-primary);
    transition: all 0.2s;
  }

  .breadcrumb-materia:hover {
    border-color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb-materia-icon {
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent, #3b82f6);
    border-radius: 50%;
    font-size: 0.75rem;
  }

  .breadcrumb-sep {
    color: var(--text-muted, #94a3b8);
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }

  .breadcrumb-link {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-primary, #3b82f6);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    transition: background 0.2s;
  }

  .breadcrumb-link:hover {
    background: rgba(59, 130, 246, 0.1);
    text-decoration: none;
  }

  .breadcrumb-current {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-primary);
    background: var(--bg-primary);
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    border: 1px solid var(--border-color, rgba(0,0,0,0.08));
  }

  @media (max-width: 640px) {
    .breadcrumb {
      padding: 0.5rem 0.75rem;
    }

    .breadcrumb-inner {
      gap: 0.5rem;
    }

    .breadcrumb-label {
      font-size: 0.5625rem;
    }

    .breadcrumb-materia,
    .breadcrumb-link,
    .breadcrumb-current {
      font-size: 0.6875rem;
    }
  }
</style>
