---
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations, formatName } from '../../utils/navigation-generator.js';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

// Obtener navegaciÃ³n de cada colecciÃ³n
let navigation: any = {};

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
} catch (e) {}
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/" class="logo">
      <span class="logo-icon">ðŸ“š</span>
      <span class="logo-text">EduSite</span>
    </a>
  </div>
  
  <nav class="sidebar-nav">
    {Object.entries(navigation).map(([materiaKey, materia]: [string, any]) => (
      <div class="nav-section">
        <h3 class="nav-section-title">
          <span class="section-icon">ðŸ“–</span>
          {materia.name}
        </h3>
        
        {Object.entries(materia.unidades).map(([unidadKey, unidad]: [string, any]) => (
          <div class="nav-unidad">
            <h4 class="nav-unidad-title">{unidad.name}</h4>
            
            {Object.entries(unidad.bloques).map(([bloqueKey, bloque]: [string, any]) => (
              <div class="nav-bloque">
                <h5 class="nav-bloque-title">{bloque.name}</h5>
                
                <ul class="nav-lessons">
                  {bloque.lecciones.map((leccion: any) => (
                    <li>
                      <a 
                        href={`/${leccion.slug}`}
                        class:list={['nav-lesson-link', { active: currentPath.includes(leccion.slug) }]}
                      >
                        {leccion.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        ))}
      </div>
    ))}
    
    {Object.keys(navigation).length === 0 && (
      <div class="nav-empty">
        <p>No hay contenido disponible aÃºn.</p>
        <p>Agrega archivos .md en <code>src/content/</code></p>
      </div>
    )}
  </nav>
</aside>

