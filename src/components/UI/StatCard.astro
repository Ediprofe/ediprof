---
/**
 * Componente de tarjeta de estad√≠stica reutilizable
 */
interface Props {
  value: string | number;
  label: string;
  icon?: string;
}

const { value, label, icon } = Astro.props;
---

<div class="stat-card">
  {icon && <span class="stat-icon">{icon}</span>}
  <div class="stat-info">
    <span class="stat-value">{value}</span>
    <span class="stat-label">{label}</span>
  </div>
</div>

<style>
  .stat-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-color, rgba(0,0,0,0.08));
  }

  .stat-icon {
    font-size: 1.5rem;
  }

  .stat-info {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
