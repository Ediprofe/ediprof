---
interface Props {
  videoId: string;
  title?: string;
}

const { videoId, title = 'Video de YouTube' } = Astro.props;

// Generar URL de thumbnail de alta calidad
const thumbnailUrl = `https://i.ytimg.com/vi/${videoId}/maxresdefault.jpg`;
const fallbackThumbnail = `https://i.ytimg.com/vi/${videoId}/hqdefault.jpg`;
---

<div class="youtube-embed" data-video-id={videoId}>
  <div class="youtube-placeholder" role="button" tabindex="0" aria-label={`Reproducir: ${title}`}>
    <picture>
      <source srcset={thumbnailUrl} type="image/jpeg" />
      <img 
        src={fallbackThumbnail} 
        alt={title}
        loading="lazy"
        decoding="async"
        class="youtube-thumbnail"
      />
    </picture>
    <div class="youtube-overlay">
      <div class="youtube-play-button">
        <svg viewBox="0 0 68 48" width="68" height="48">
          <path class="play-bg" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#FF0000"/>
          <path class="play-icon" d="M 45,24 27,14 27,34" fill="#fff"/>
        </svg>
      </div>
      <span class="youtube-title">{title}</span>
    </div>
  </div>
  <iframe 
    class="youtube-iframe"
    data-src={`https://www.youtube-nocookie.com/embed/${videoId}?autoplay=1&rel=0`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
    loading="lazy"
  ></iframe>
</div>

<script>
  function initYouTubeEmbeds() {
    const embeds = document.querySelectorAll('.youtube-embed');
    
    embeds.forEach(embed => {
      const placeholder = embed.querySelector('.youtube-placeholder');
      const iframe = embed.querySelector('.youtube-iframe') as HTMLIFrameElement;
      
      if (!placeholder || !iframe) return;
      
      const loadVideo = () => {
        const src = iframe.dataset.src;
        if (src) {
          iframe.src = src;
          embed.classList.add('loaded');
        }
      };
      
      placeholder.addEventListener('click', loadVideo);
      placeholder.addEventListener('keydown', (e) => {
        if ((e as KeyboardEvent).key === 'Enter' || (e as KeyboardEvent).key === ' ') {
          e.preventDefault();
          loadVideo();
        }
      });
    });
  }
  
  // Ejecutar al cargar y en navegación de Astro
  initYouTubeEmbeds();
  document.addEventListener('astro:page-load', initYouTubeEmbeds);
</script>

<style>
  .youtube-embed {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 */
    margin: 2rem 0;
    border-radius: 16px;
    overflow: hidden;
    background: #000;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  }

  :global(html.dark) .youtube-embed {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .youtube-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    z-index: 2;
    transition: opacity 0.3s ease;
  }

  .youtube-embed.loaded .youtube-placeholder {
    opacity: 0;
    pointer-events: none;
  }

  .youtube-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .youtube-placeholder:hover .youtube-thumbnail {
    transform: scale(1.02);
  }

  .youtube-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.4) 100%
    );
    transition: background 0.3s ease;
  }

  .youtube-placeholder:hover .youtube-overlay {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
  }

  .youtube-play-button {
    width: 80px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, filter 0.2s ease;
  }

  .youtube-placeholder:hover .youtube-play-button {
    transform: scale(1.1);
    filter: drop-shadow(0 4px 12px rgba(255, 0, 0, 0.4));
  }

  .youtube-play-button svg {
    width: 100%;
    height: 100%;
  }

  .play-bg {
    transition: fill 0.2s ease;
  }

  .youtube-placeholder:hover .play-bg {
    fill: #ff0000;
  }

  .youtube-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem 1.25rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
    color: white;
    font-size: 0.9375rem;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .youtube-placeholder:hover .youtube-title {
    opacity: 1;
    transform: translateY(0);
  }

  .youtube-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    z-index: 1;
  }

  /* Decoración */
  .youtube-embed::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, #ff0000, #cc0000, #ff0000);
    border-radius: 18px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .youtube-embed:hover::before {
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .youtube-embed {
      border-radius: 12px;
      margin: 1.5rem 0;
    }

    .youtube-embed::before {
      border-radius: 14px;
    }

    .youtube-play-button {
      width: 64px;
      height: 45px;
    }

    .youtube-title {
      font-size: 0.8125rem;
      padding: 0.75rem 1rem;
    }
  }
</style>
