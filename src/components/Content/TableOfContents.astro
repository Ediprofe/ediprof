---
import { cleanLatex } from '../../utils/clean-latex';

interface Props {
  headings: Array<{ depth: number; slug: string; text: string }>;
}

const { headings } = Astro.props;

// Filtrar solo h2 y h3
const tocHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="toc" aria-label="Tabla de contenidos">
    <details open>
      <summary class="toc-title">
        <span class="toc-icon">ðŸ“‘</span>
        Contenido
      </summary>
      
      <ul class="toc-list">
        {tocHeadings.map(heading => (
          <li class:list={['toc-item', `depth-${heading.depth}`]}>
            <a href={`#${heading.slug}`} class="toc-link">
              {cleanLatex(heading.text)}
            </a>
          </li>
        ))}
      </ul>
    </details>
  </nav>
)}

<style>
  .toc {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.04), rgba(59, 130, 246, 0.02));
    border: 1px solid rgba(37, 99, 235, 0.12);
    border-radius: 12px;
    padding: 1.25rem;
    margin-bottom: 2rem;
  }

  :global(html.dark) .toc {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.08), rgba(59, 130, 246, 0.04));
    border-color: rgba(59, 130, 246, 0.2);
  }

  .toc-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--text-primary);
    cursor: pointer;
    list-style: none;
  }

  .toc-title::-webkit-details-marker {
    display: none;
  }

  .toc-title::after {
    content: 'â€º';
    font-size: 1rem;
    margin-left: auto;
    color: var(--color-primary);
    transition: transform 0.2s;
    transform: rotate(90deg);
  }

  details:not([open]) .toc-title::after {
    transform: rotate(0deg);
  }

  .toc-icon {
    font-size: 1rem;
  }

  .toc-list {
    list-style: none;
    margin: 1rem 0 0 0;
    padding: 0;
    border-left: 2px solid rgba(37, 99, 235, 0.2);
    margin-left: 0.5rem;
  }

  .toc-item {
    margin-bottom: 0.125rem;
  }

  .toc-item.depth-3 {
    margin-left: 0.75rem;
  }

  .toc-link {
    display: block;
    padding: 0.375rem 0.875rem;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 0 6px 6px 0;
    transition: all 0.15s;
    margin-left: -2px;
    border-left: 2px solid transparent;
  }

  .toc-link:hover {
    background: rgba(37, 99, 235, 0.08);
    color: var(--color-primary);
    border-left-color: var(--color-primary);
    text-decoration: none;
  }

  .depth-2 .toc-link {
    font-weight: 500;
  }

  .depth-3 .toc-link {
    font-size: 0.75rem;
    color: var(--text-secondary);
    opacity: 0.9;
  }

  @media (max-width: 640px) {
    .toc {
      padding: 1rem;
    }

    .toc-link {
      padding: 0.3rem 0.625rem;
      font-size: 0.75rem;
    }
  }
</style>
