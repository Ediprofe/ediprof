---
interface Props {
    title: string;
    images?: string[];
}

const { title, images = [] } = Astro.props;
---

<div class="map-section">
    <!-- The horizontal connector belonging to this section -->
    <div class="section-h-connector"></div>

    <div class="section-header">
        <h3 class="section-title">{title}</h3>
        {
            images.length > 0 && (
                <button
                    class="view-images-btn"
                    data-images={JSON.stringify(images)}
                    title="Ver ilustraciones"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <>
                            <circle cx="12" cy="12" r="10" />
                            <line x1="12" y1="16" x2="12" y2="12" />
                            <line x1="12" y1="8" x2="12.01" y2="8" />
                        </>
                    </svg>
                    <span>Ilustraciones</span>
                </button>
            )
        }
    </div>

    <div class="section-content">
        <slot />
    </div>
</div>

<style>
    .map-section {
        position: relative;
    }

    .section-h-connector {
        position: absolute;
        left: -2rem;
        top: 0.7rem;
        width: 1.5rem;
        height: 1.5px;
        background: #cbd5e1;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 0.6rem;
    }

    .section-title {
        margin: 0;
        color: #2563eb;
        font-weight: 400;
        font-size: 1.1rem;
        letter-spacing: -0.01em;
    }

    /* Estilos Bot√≥n "Ver Ilustraciones" */
    .view-images-btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        color: #64748b;
        font-family: "Space Grotesk", sans-serif;
        font-size: 0.7rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .view-images-btn:hover {
        background: #f8fafc;
        color: #2563eb;
        border-color: #cbd5e1;
        transform: translateY(-1px);
    }

    .section-content {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }
</style>
