<div class="resumen-tree">
    <div class="tree-header">
        <div class="root-node">MAPA DEL TEMA</div>
        <div class="root-connector">║</div>
    </div>
    <div class="tree-content">
        <slot />
    </div>
</div>

<style>
    /* Contenedor Principal */
    .resumen-tree {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        padding: 2rem;
        font-family: "Fira Code", "Courier New", monospace;
        font-size: 0.9rem;
        line-height: 1.6;
        color: #1e293b;
        margin: 2rem 0;
        overflow-x: auto; /* Permite scroll horizontal si es muy necesario en pantallas minúsculas */
    }

    /* Cabecera del Árbol */
    .tree-header {
        margin-bottom: 0.5rem;
    }

    .root-node {
        font-weight: 800;
        font-size: 1.1rem;
        color: #1e293b;
        letter-spacing: -0.01em;
    }

    .root-connector {
        font-weight: 700;
        color: #cbd5e1;
        margin-left: 4px; /* Alineación fina */
    }

    /* Estilos para la lista Markdown (slot) */
    .tree-content :global(> ul) {
        margin: 0;
        padding: 0;
        list-style: none;
        border-left: 2px solid #cbd5e1;
        margin-left: 0.6rem;
        padding-left: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding-top: 0.5rem;
    }

    /* Items de primer nivel (Las Ramas Principales) */
    .tree-content :global(> ul > li) {
        position: relative;
        margin: 0;
        padding: 0;
    }

    /* Conector Horizontal Principal (╠══) */
    .tree-content :global(> ul > li::before) {
        content: "";
        position: absolute;
        left: -1.6rem; /* Ajustar para tocar la línea vertical padre */
        top: 0.7em;
        width: 1.4rem;
        height: 2px;
        background: #cbd5e1;
    }

    /* Texto del Primer Nivel (Títulos 01, 02...) */
    .tree-content :global(> ul > li > strong),
    .tree-content :global(> ul > li > p > strong) {
        color: #2563eb;
        font-weight: 700;
        font-size: 1rem;
        display: block; /* Forzar bloque para que el contenido hijo caiga abajo */
        margin-bottom: 0.5rem;
    }

    /* Listas Anidadas (Nivel 2 y más) */
    .tree-content :global(ul ul) {
        list-style: none;
        margin: 0;
        padding: 0;
        border-left: 1px solid #cbd5e1; /* Línea más fina para subniveles */
        margin-left: 0.5rem;
        padding-left: 1.5rem;
        margin-top: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .tree-content :global(ul ul li) {
        position: relative;
        margin-bottom: 0.2rem;
    }

    /* Conector Horizontal Secundario (├─) */
    .tree-content :global(ul ul li::before) {
        content: "";
        position: absolute;
        left: -1.5rem;
        top: 0.6em;
        width: 1.2rem;
        height: 1px;
        background: #cbd5e1;
    }

    /* Negritas en subniveles (Etiquetas como Teoría Celular:) */
    .tree-content :global(ul ul li strong) {
        color: #475569;
        font-weight: 600;
    }

    /* Ajuste para párrafos dentro de LI que mete Markdown automáticamente */
    .tree-content :global(li > p) {
        margin: 0;
        display: inline-block; /* Permitir que fluya pero respetar márgenes */
    }
</style>
