---
/**
 * TopBar - Barra superior fija con ThemeToggle
 * Se muestra en todas las páginas arriba a la derecha
 */
import ThemeToggle from '../UI/ThemeToggle.astro';
---

<div class="top-bar">
  <ThemeToggle />
</div>

<style>
  .top-bar {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 1000;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Ocultar en móvil/tablet cuando hay sticky-header */
  @media (max-width: 1024px) {
    .top-bar {
      display: none;
    }
  }
</style>
