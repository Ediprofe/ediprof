---
interface Props {
    layout?: "lista" | "grid"; // Grid para futuro uso si hay opciones cortas (A, B, C, D) en una fila
    class?: string;
}

const { layout = "lista", class: className } = Astro.props;
---

<ol class={`saber-opciones layout-${layout} ${className || ""}`}>
    <slot />
</ol>

<style>
    /* Base styles are inherited from global preguntas-icfes.css for now to keep consistency 
     with the existing manual implementation, but we map them here. */

    ol.saber-opciones {
        list-style: none;
        counter-reset: saber-opt;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin: 1.5rem 0 2rem 0;
    }
</style>
