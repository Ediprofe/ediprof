{
    "type": "function",
    "metadata": {
        "id": "taxi-costo",
        "title": "Costo del Taxi: y = 2x + 3",
        "lesson": "02-algebra/09-funciones-lineales/01-introduccion"
    },
    "canvas": {
        "width": 650,
        "height": 450,
        "padding": 75,
        "background": "#f8fafc"
    },
    "axes": {
        "x": {
            "min": 0,
            "max": 5,
            "label": "Kil√≥metros (x)",
            "step": 1,
            "ticks": "numeric"
        },
        "y": {
            "min": 0,
            "max": 14,
            "label": "Costo en Pesos (y)",
            "step": 2,
            "ticks": "numeric"
        }
    },
    "functions": [
        {
            "id": "taxi",
            "expression": "2*x + 3",
            "color": "#3b82f6",
            "strokeWidth": 3
        }
    ],
    "markers": [
        {
            "x": 0,
            "y": 3,
            "label": "Inicio $3 (b)",
            "color": "#ef4444",
            "labelPosition": "right"
        },
        {
            "x": 1,
            "y": 5,
            "label": "",
            "color": "#3b82f6"
        },
        {
            "x": 2,
            "y": 7,
            "label": "",
            "color": "#3b82f6"
        }
    ],
    "annotations": [
        {
            "type": "arrow",
            "from_x": 1,
            "from_y": 5,
            "to_x": 2,
            "to_y": 5,
            "label": "+1 km",
            "color": "#64748b"
        },
        {
            "type": "arrow",
            "from_x": 2,
            "from_y": 5,
            "to_x": 2,
            "to_y": 7,
            "label": "+$2",
            "color": "#22c55e"
        },
        {
            "type": "text",
            "x": 3.5,
            "y": 4,
            "text": "Pendiente m = 2\n(Costo por km)",
            "color": "#22c55e",
            "fontSize": 12,
            "fontWeight": "bold"
        }
    ],
    "animations": {
        "enabled": true,
        "duration": 2
    }
}