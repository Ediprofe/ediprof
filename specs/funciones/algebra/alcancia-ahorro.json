{
    "type": "function",
    "metadata": {
        "id": "alcancia-ahorro",
        "title": "Ahorro en Alcanc√≠a: y = 100x + 500",
        "lesson": "02-algebra/09-funciones-lineales/01-introduccion"
    },
    "canvas": {
        "width": 650,
        "height": 450,
        "padding": 75,
        "background": "#f8fafc"
    },
    "axes": {
        "x": {
            "min": 0,
            "max": 6,
            "label": "Meses (x)",
            "step": 1,
            "ticks": "numeric"
        },
        "y": {
            "min": 0,
            "max": 1200,
            "label": "Total Ahorrado ($)",
            "step": 200,
            "ticks": "numeric"
        }
    },
    "functions": [
        {
            "id": "func-ahorro",
            "expression": "100*x + 500",
            "color": "#22c55e",
            "strokeWidth": 3
        }
    ],
    "markers": [
        {
            "x": 0,
            "y": 500,
            "label": "$500 Iniciales (b)",
            "color": "#3b82f6",
            "labelPosition": "right"
        },
        {
            "x": 1,
            "y": 600,
            "label": "",
            "color": "#22c55e"
        },
        {
            "x": 2,
            "y": 700,
            "label": "",
            "color": "#22c55e"
        }
    ],
    "annotations": [
        {
            "type": "arrow",
            "from_x": 1,
            "from_y": 600,
            "to_x": 2,
            "to_y": 600,
            "label": "+1 mes",
            "color": "#64748b"
        },
        {
            "type": "arrow",
            "from_x": 2,
            "from_y": 600,
            "to_x": 2,
            "to_y": 700,
            "label": "+$100",
            "color": "#22c55e"
        },
        {
            "type": "text",
            "x": 4,
            "y": 800,
            "text": "Pendiente m = 100\n(Ahorro mensual)",
            "color": "#22c55e",
            "fontSize": 12,
            "fontWeight": "bold"
        }
    ],
    "animations": {
        "enabled": true,
        "duration": 2
    }
}