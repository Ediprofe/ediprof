{
    "type": "function",
    "metadata": {
        "id": "salario-hora",
        "title": "Salario por Hora: y = 15x",
        "lesson": "02-algebra/09-funciones-lineales/01-introduccion"
    },
    "canvas": {
        "width": 650,
        "height": 450,
        "padding": 75,
        "background": "#f8fafc"
    },
    "axes": {
        "x": {
            "min": 0,
            "max": 6,
            "label": "Horas (x)",
            "step": 1,
            "ticks": "numeric"
        },
        "y": {
            "min": 0,
            "max": 90,
            "label": "Ganancia ($)",
            "step": 15,
            "ticks": "numeric"
        }
    },
    "functions": [
        {
            "id": "func-salario",
            "expression": "15*x",
            "color": "#3b82f6",
            "strokeWidth": 3
        }
    ],
    "markers": [
        {
            "x": 0,
            "y": 0,
            "label": "Inicio $0 (b)",
            "color": "#ef4444",
            "labelPosition": "right"
        },
        {
            "x": 1,
            "y": 15,
            "label": "",
            "color": "#3b82f6"
        },
        {
            "x": 2,
            "y": 30,
            "label": "",
            "color": "#3b82f6"
        }
    ],
    "annotations": [
        {
            "type": "arrow",
            "from_x": 1,
            "from_y": 15,
            "to_x": 2,
            "to_y": 15,
            "label": "+1 h",
            "color": "#64748b"
        },
        {
            "type": "arrow",
            "from_x": 2,
            "from_y": 15,
            "to_x": 2,
            "to_y": 30,
            "label": "+$15",
            "color": "#22c55e"
        },
        {
            "type": "text",
            "x": 4,
            "y": 30,
            "text": "Pendiente m = 15\n(Gana por hora)",
            "color": "#22c55e",
            "fontSize": 12,
            "fontWeight": "bold"
        }
    ],
    "animations": {
        "enabled": true,
        "duration": 2
    }
}