    { "type": "vertical_asymptote", "x": "3*pi/2", "color": "#94a3b8", "style": "dashed" },
    { "type": "brace", "from_x": "-pi/2", "to_x": "pi/2", "y": -4.5, "label": "Período = π", "color": "#ef4444" },
    { "type": "brace", "from_x": "pi/2", "to_x": "3*pi/2", "y": -4.5, "label": "Período = π", "color": "#22c55e" }
