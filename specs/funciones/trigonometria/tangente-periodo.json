{
  "type": "function",
  "metadata": {
    "id": "tangente-periodo",
    "title": "Período de la tangente: π",
    "lesson": "04-trigonometria/03-graficas-funciones-trigonometricas/03-grafica-tangente"
  },
  "canvas": {
    "width": 800,
    "height": 400,
    "padding": 55,
    "background": "#f8fafc"
  },
  "axes": {
