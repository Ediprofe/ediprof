{
  "type": "function",
  "metadata": {
    "id": "arccos",
    "title": "Arcocoseno: de números a ángulos",
    "lesson": "04-trigonometria/03-graficas-funciones-trigonometricas/07-funciones-inversas"
  },
  "canvas": {
    "width": 600,
    "height": 400,
    "padding": 55,
    "background": "#f8fafc"
  },
  "axes": {
    "x": { "min": -1.3, "max": 1.3, "label": "x" },
    "y": { "min": -0.5, "max": 3.5, "label": "y (radianes)", "ticks": "pi" }
  },
  "functions": [
    {
      "id": "arccos-x",
      "expression": "arccos(x)",
      "color": "#ef4444",
      "strokeWidth": 3,
      "domain": [-1, 1]
    }
  ],
  "markers": [
    { "x": -1, "y": "pi", "label": "(-1, π)", "color": "#3b82f6", "labelPosition": "left" },
    { "x": 0, "y": "pi/2", "label": "(0, π/2)", "color": "#22c55e", "labelPosition": "right" },
    { "x": 1, "y": 0, "label": "(1, 0)", "color": "#3b82f6", "labelPosition": "right" }
  ],
  "annotations": [
    { "type": "horizontal_line", "y": "pi", "color": "#94a3b8", "style": "dashed", "label": "π" },
    { "type": "horizontal_line", "y": 0, "color": "#94a3b8", "style": "dashed" }
  ],
  "animations": {
    "enabled": true,
    "style": "draw",
    "duration": 1.5,
    "markersDelay": 1.5
  }
}

