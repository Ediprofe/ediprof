{
  "type": "function",
  "metadata": {
    "id": "arcsin",
    "title": "Arcoseno: de números a ángulos",
    "lesson": "04-trigonometria/03-graficas-funciones-trigonometricas/07-funciones-inversas"
  },
  "canvas": {
    "width": 600,
    "height": 400,
    "padding": 55,
    "background": "#f8fafc"
  },
  "axes": {
    "x": { "min": -1.3, "max": 1.3, "label": "x" },
    "y": { "min": -2, "max": 2, "label": "y (radianes)", "ticks": "pi" }
  },
  "functions": [
    {
      "id": "arcsin-x",
      "expression": "arcsin(x)",
      "color": "#3b82f6",
      "strokeWidth": 3,
      "domain": [-1, 1]
    }
  ],
  "markers": [
    { "x": -1, "y": "-pi/2", "label": "(-1, -π/2)", "color": "#ef4444", "labelPosition": "left" },
    { "x": 0, "y": 0, "label": "(0, 0)", "color": "#22c55e", "labelPosition": "right" },
    { "x": 1, "y": "pi/2", "label": "(1, π/2)", "color": "#ef4444", "labelPosition": "right" }
  ],
  "annotations": [
    { "type": "horizontal_line", "y": "pi/2", "color": "#94a3b8", "style": "dashed", "label": "π/2" },
    { "type": "horizontal_line", "y": "-pi/2", "color": "#94a3b8", "style": "dashed", "label": "-π/2" }
  ],
  "animations": {
    "enabled": true,
    "style": "draw",
    "duration": 1.5,
    "markersDelay": 1.5
  }
}

