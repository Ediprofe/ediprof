{
  "type": "function",
  "metadata": {
    "id": "fase-horizontal",
    "title": "Desplazamiento de Fase (Horizontal)",
    "lesson": "04-trigonometria/03-graficas-funciones-trigonometricas/06-desplazamiento-fase"
  },
  "canvas": {
    "width": 800,
    "height": 450,
    "padding": 55,
    "background": "#f8fafc"
  },
  "axes": {
    "x": {
      "min": "-pi/2",
      "max": "5*pi/2",
      "label": "x",
      "ticks": "pi"
    },
    "y": {
      "min": -1.8,
      "max": 1.8,
      "label": "y"
    }
  },
  "functions": [
    {
      "id": "sin-x-base",
      "expression": "sin(x)",
      "color": "#94a3b8",
      "strokeWidth": 2,
      "label": "sin(x) - Original"
    },
    {
      "id": "sin-x-derecha",
      "expression": "sin(x - pi/2)",
      "color": "#ef4444",
      "strokeWidth": 3,
      "label": "sin(x - π/2) → Derecha"
    },
    {
      "id": "sin-x-izquierda",
      "expression": "sin(x + pi/2)",
      "color": "#22c55e",
      "strokeWidth": 3,
      "label": "sin(x + π/2) ← Izquierda"
    }
  ],
  "markers": [],
  "annotations": [
    {
      "type": "legend",
      "position": "top-right"
    },
    {
      "type": "arrow",
      "from_x": "pi/2",
      "from_y": 0.5,
      "to_x": "pi",
      "to_y": 0.5,
      "color": "#ef4444",
      "label": "-π/2"
    },
    {
      "type": "arrow",
      "from_x": "pi/2",
      "from_y": -0.5,
      "to_x": 0,
      "to_y": -0.5,
      "color": "#22c55e",
      "label": "+π/2"
    },
    {
      "type": "text",
      "x": "2*pi",
      "y": -1.6,
      "text": "⚠️ Restar = Derecha | Sumar = Izquierda",
      "fontSize": 12,
      "color": "#64748b"
    }
  ],
  "animations": {
    "enabled": true,
    "style": "draw",
    "duration": 2,
    "markersDelay": 2
  }
}
